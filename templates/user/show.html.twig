{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Mot De Passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ user.addresse }}</td>
            </tr>
            <tr>
                <th>Spécialité</th>
                <td>{{ user.speciality }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_mainhomeadmin') }}">Retour</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
