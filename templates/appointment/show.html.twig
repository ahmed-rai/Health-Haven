{% extends 'back.html.twig' %}





{% block body %}


<div class="container" style="margin: 0 auto; width: 50% ; margin-top: 90px; ">
    <div class="card">
        <div class="card-body text-center">
            <h5 class="card-title">Rendez-vous avec {{ appointment.medecinName }}</h5>
            <p class="card-text">Date : {{ appointment.dateAp|date('d/m/Y') }}</p>
            <p class="card-text">Heure : {{ appointment.hour|date('H:i') }}</p>          
            <p class="card-text">Patient : {{ appointment.getPatientName() }} </p>
        </div>
    </div>
</div>




{% endblock %}
