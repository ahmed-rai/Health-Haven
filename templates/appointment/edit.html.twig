  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header text-white" style="background-color: #1977CC;">
            <h1 class="card-title text-center mb-4">Modifier le rendez-vous</h1>
          </div>
          <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group">
              {{ form_label(form.dateap, 'Date du rendez-vous') }}
              {{ form_widget(form.dateap, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
              {{ form_label(form.hour, 'Heure du rendez-vous') }}
              {{ form_widget(form.hour, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-center mt-4">
              {{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-primary rounded-pill px-4 py-2'}}) }}
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
